<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>hello</servlet-name> <!-- 패키지명 -->
        <servlet-class>com.bouncewater.hello.HelloController</servlet-class> <!-- 패키지 링크 -->
    </servlet>

    <servlet-mapping>
        <servlet-name>hello</servlet-name> <!-- 연결지점 생성 -->
        <url-pattern>/hello</url-pattern> <!-- 반드시 처음에 /를 포함해야함, / 미포함시 실행 자체가 안됨! -->
    </servlet-mapping>

    <servlet>
        <servlet-name>ex01</servlet-name>
        <servlet-class>com.bouncewater.servlet.ex.Ex01Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ex01</servlet-name>
        <url-pattern>/servlet/ex01</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>test01</servlet-name>
        <servlet-class>com.bouncewater.servlet.test.Test01</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>test01</servlet-name>
        <url-pattern>/servlet/test01</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>test02</servlet-name>
        <servlet-class>com.bouncewater.servlet.test.Test02</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>test02</servlet-name>
        <url-pattern>/servlet/test02</url-pattern>
    </servlet-mapping>

</web-app>